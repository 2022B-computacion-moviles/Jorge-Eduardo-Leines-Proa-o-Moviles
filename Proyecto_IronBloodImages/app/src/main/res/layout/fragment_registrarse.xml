        android:background="#D2000000">

        <EditText
            android:id="@+id/pt_passCon_re"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Vuelva a escribir su Ingrese su contrase単a"
            android:inputType="textPassword"
            android:shadowColor="#F8F8F8"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/pt_pass_re"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Ingrese su contrase単a"
            android:inputType="textPassword"
            android:shadowColor="#F8F8F8"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/pt_username_re"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Ingrese su nombre de usuario"
            android:inputType="textPersonName"
            android:shadowColor="#F8F8F8"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
