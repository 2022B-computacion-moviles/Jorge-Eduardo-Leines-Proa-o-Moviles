<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".autorActividad">

    <ListView
        android:id="@+id/lv_autor"
        android:layout_width="358dp"
        android:layout_height="413dp"
        android:layout_marginTop="76dp"
        android:background="#020723"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_autor_main"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_autor_main"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_autor_main" />

    <Button
        android:id="@+id/btn_crear_autor_main"
        android:layout_width="111dp"
        android:layout_height="71dp"
        android:layout_marginTop="60dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />
</androidx.constraintlayout.widget.ConstraintLayout>